<h1>Admin Dashboard</h1>
<p>Welcome to the admin dashboard!</p>

<p>
  <%= link_to 'Merchants Index', admin_merchants_path %>
</p>

<p>
  <%= link_to 'Invoices Index', admin_invoices_path %>
</p>

<section id="top_5_customers">
  <h3>Top 5 Customers</h3>
  <% @customers.top_5_customers.each do |customer| %>
    <section id= "customer-<%= customer.id %>">
      <%= customer.full_name %>
      <%= "| Successful Transactions: #{customer.transaction_count}" %>
    </section>
  <% end %>
</section>

<section id="incomplete_invoices">
  <h3>Incomplete Invoices</h3>
  <% @invoices.incomplete_invoices.each do |invoice| %>
    <section id= "invoice-<%= invoice.id %>">
      <p>Invoice ID: <%= link_to "#{invoice.id}", admin_invoice_path(invoice.id) %></p>
      <p><%= "Created On: #{invoice.created_at.strftime("%A, %B %d, %Y")}" %></p>
    </section>
  <% end %>
</section>

