<h1><%= @merchant.name %></h1>

<nav id = "merch-nav">
  <%= link_to 'Items Index', merchant_items_path(@merchant) %>
  <%= link_to 'Invoices Index', merchant_invoices_path(@merchant) %>
</nav>

<h2>Top 5 Customers</h2>
<div id = "customers">
  <ul id="top-customers">
    <% @merchant.top_customers.each do |customer| %>
      <li>
        <%= customer.first_name %> <%= customer.last_name %> - <%= customer.transaction_count %> transactions
      </li>
    <% end %>
  </ul>
</div>

<h2> Items Ready to Ship </h2>
<div id = shipping>
  <ul id="items-ready-to-ship">
    <% @merchant.items_ready_to_ship.each do |item| %>
      <li>
        Item: <%= item.name %> - <%= item.created_at.strftime("%A, %B %d, %Y") %>
        Invoice ID: <%= link_to item.invoice_id, merchant_invoice_path(@merchant, item.invoice_id) %>
      </li>
    <% end %>
  </ul>
</div>
