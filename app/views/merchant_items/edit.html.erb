<h1>Edit Item</h1>
<%= form_with model: [@merchant, @item], local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :unit_price %><br>
    <%= form.number_field :unit_price %>
  </p>

  <p>
    <%= form.label :status %><br>
    <%= form.select :status, Item.statuses.keys.map { |status| [status.humanize, status] } %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', merchant_item_path(@merchant, @item) %>
